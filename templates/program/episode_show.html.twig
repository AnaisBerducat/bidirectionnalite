{% extends 'base.html.twig' %}

{% block title %} {{program.title}} {% endblock %}

{% block body %}
<div class="media">
    <h1>Nom de la série : {{ program.title }}</h1>
    <div class="media-body">
      <h2 class="mt-0">Saison: {{ season.number }}</h2>
      <h2 class="mt-0">Episode: {{ episode.number }} / {{ episode.title }}</h2>
      <p class="mt-0">Résumé: {{ program.summary }}</p>

    </div>
  </div>
  <a href="{{ path('program_index') }}">
      Retour à la liste des programmes
  </a>
{% endblock %}