{% extends 'base.html.twig' %}

{% block title %} Categories {% endblock %}

{% block body %}
    <h1>Toutes les categories : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / Catégorie : {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries de cette catégories</a>
        </div>
    {% else %}
        Aucune categorie trouvée.
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}